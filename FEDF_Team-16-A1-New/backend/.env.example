# Environment Configuration for Cosmic DevSpace

# Database
MONGODB_URI=mongodb://localhost:27017/cosmic-devspace
# Alternative: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cosmic-devspace

# JWT Configuration
JWT_SECRET=cosmic_super_secret_key_that_is_very_long_and_secure_for_space_authentication_2025
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=cosmic_refresh_secret_key_for_space_tokens_2025

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://127.0.0.1:5500

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_SECRET=cosmic_analytics_secret_2025

# Admin Configuration
ADMIN_EMAIL=admin@cosmic-devspace.com
ADMIN_PASSWORD=CosmicAdmin2025!