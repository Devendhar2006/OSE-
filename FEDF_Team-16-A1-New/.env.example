# Environment Variables for Cosmic DevSpace
# Copy this file to .env and update with your actual values

# Database Configuration
MONGO_URI=mongodb://localhost:27017/cosmic_devspace
MONGO_ROOT_USERNAME=cosmicadmin
MONGO_ROOT_PASSWORD=cosmicpass123
MONGO_DB_NAME=cosmic_devspace

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=cosmicredis123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-complex
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too-make-it-different-from-jwt-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-as-well-make-it-unique-and-complex

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Email Configuration (for notifications and contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@cosmicdevspace.com

# Admin Configuration
ADMIN_EMAIL=admin@cosmicdevspace.com
ADMIN_NAME=Cosmic Admin

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ENABLE_ANALYTICS=true

# External APIs (Optional)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_USERNAME=your-github-username

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/cosmic-devspace.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Development Tools (for docker-compose profiles)
MONGO_EXPRESS_USER=cosmic
MONGO_EXPRESS_PASS=cosmic123

# Production Specific (uncomment for production deployment)
# NODE_ENV=production
# PORT=3000
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/cosmic_devspace
# REDIS_URL=redis://username:password@redis-host:port
# CORS_ORIGIN=https://yourdomain.com
# SOCKET_CORS_ORIGIN=https://yourdomain.com

# SSL Configuration (for production with nginx)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
ENABLE_GUESTBOOK=true
ENABLE_CONTACT_FORM=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=true

# Social Media Links (for portfolio)
SOCIAL_GITHUB=https://github.com/yourusername
SOCIAL_LINKEDIN=https://linkedin.com/in/yourusername
SOCIAL_TWITTER=https://twitter.com/yourusername
SOCIAL_EMAIL=hello@yourdomain.com

# Portfolio Content
PORTFOLIO_TITLE=Cosmic DevSpace
PORTFOLIO_DESCRIPTION=A full-stack developer's cosmic journey through code and creativity
PORTFOLIO_AUTHOR=Your Name
PORTFOLIO_KEYWORDS=developer,portfolio,web development,cosmic,space,fullstack

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_MAX_AGE=31536000
STATIC_CACHE_MAX_AGE=86400

# Backup Configuration (for production)
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1